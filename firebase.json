{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites":
    [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/signin",
        "destination": "/signin.html"
      },
      {
        "source": "/users",
        "destination": "/users.html"
      },
      {
        "source": "/jobs",
        "destination": "/jobs.html"
      },
      {
        "source": "/components",
        "destination": "/components.html"
      },
      {
        "source": "/authflow",
        "destination": "/authflow.html"
      }
    ]
  }
}
